    <script>
        // Desktop Carousel functionality
        const desktopCarousels = {};

        function initDesktopCarousels() {
            document.querySelectorAll('[data-carousel]').forEach(carousel => {
                const id = parseInt(carousel.getAttribute('data-carousel'));
                desktopCarousels[id] = { currentSlide: 0, totalSlides: carousel.querySelectorAll('.desktop-carousel-slide').length };
            });
        }

        function moveDesktopSlide(carouselId, direction) {
            const carousel = desktopCarousels[carouselId];
            carousel.currentSlide = (carousel.currentSlide + direction + carousel.totalSlides) % carousel.totalSlides;
            setDesktopSlide(carouselId, carousel.currentSlide);
        }

        function setDesktopSlide(carouselId, slideIndex) {
            const carousel = desktopCarousels[carouselId];
            carousel.currentSlide = slideIndex;
            
            const carouselElement = document.querySelector(`[data-carousel="${carouselId}"]`);
            const slides = carouselElement.querySelector('.desktop-carousel-slides');
            const dots = carouselElement.querySelectorAll('.desktop-carousel-dot');
            
            slides.style.transform = `translateX(-${carousel.currentSlide * 100}%)`;
            
            dots.forEach((dot, index) => {
                dot.classList.toggle('active', index === carousel.currentSlide);
            });
        }

        // Mobile Carousel functionality
        let currentMobileSlide = 0;
        const totalMobileSlides = 7;
        let startX = 0;
        let currentX = 0;
        let isDragging = false;

        const mobileWrapper = document.getElementById('mobileCarouselWrapper');
        const mobileSlides = document.getElementById('mobileCarouselSlides');

        function moveToMobileSlide(slideIndex) {
            currentMobileSlide = slideIndex;
            mobileSlides.style.transform = `translateX(-${currentMobileSlide * 100}%)`;
            
            document.querySelectorAll('.mobile-carousel-dot').forEach((dot, index) => {
                dot.classList.toggle('active', index === currentMobileSlide);
            });
        }

        // Touch/Swipe functionality for mobile carousel
        mobileWrapper.addEventListener('touchstart', (e) => {
            startX = e.touches[0].clientX;
            isDragging = true;
            mobileSlides.style.transition = 'none';
        });

        mobileWrapper.addEventListener('touchmove', (e) => {
            if (!isDragging) return;
            currentX = e.touches[0].clientX;
            const diff = currentX - startX;
            const currentOffset = -currentMobileSlide * mobileWrapper.offsetWidth;
            mobileSlides.style.transform = `translateX(${currentOffset + diff}px)`;
        });

        mobileWrapper.addEventListener('touchend', (e) => {
            if (!isDragging) return;
            isDragging = false;
            mobileSlides.style.transition = 'transform 0.3s ease-out';
            
            const diff = currentX - startX;
            const threshold = mobileWrapper.offsetWidth * 0.2;
            
            if (diff > threshold && currentMobileSlide > 0) {
                moveToMobileSlide(currentMobileSlide - 1);
            } else if (diff < -threshold && currentMobileSlide < totalMobileSlides - 1) {
                moveToMobileSlide(currentMobileSlide + 1);
            } else {
                moveToMobileSlide(currentMobileSlide);
            }
        });

        // Mouse drag for desktop
        mobileWrapper.addEventListener('mousedown', (e) => {
            startX = e.clientX;
            isDragging = true;
            mobileSlides.style.transition = 'none';
        });

        mobileWrapper.addEventListener('mousemove', (e) => {
            if (!isDragging) return;
            currentX = e.clientX;
            const diff = currentX - startX;
            const currentOffset = -currentMobileSlide * mobileWrapper.offsetWidth;
            mobileSlides.style.transform = `translateX(${currentOffset + diff}px)`;
        });

        mobileWrapper.addEventListener('mouseup', (e) => {
            if (!isDragging) return;
            isDragging = false;
            mobileSlides.style.transition = 'transform 0.3s ease-out';
            
            const diff = currentX - startX;
            const threshold = mobileWrapper.offsetWidth * 0.2;
            
            if (diff > threshold && currentMobileSlide > 0) {
                moveToMobileSlide(currentMobileSlide - 1);
            } else if (diff < -threshold && currentMobileSlide < totalMobileSlides - 1) {
                moveToMobileSlide(currentMobileSlide + 1);
            } else {
                moveToMobileSlide(currentMobileSlide);
            }
        });

        mobileWrapper.addEventListener('mouseleave', () => {
            if (isDragging) {
                isDragging = false;
                mobileSlides.style.transition = 'transform 0.3s ease-out';
                moveToMobileSlide(currentMobileSlide);
            }
        });

        // Initialize
        window.addEventListener('load', () => {
            initDesktopCarousels();
        });

        // Smooth scroll enhancement
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Add scroll animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        document.querySelectorAll('.feature-card, .game-card, .stat-box').forEach(el => {
            el.style.opacity = '0';
            el.style.transform = 'translateY(20px)';
            el.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
            observer.observe(el);
        });
    </script>
